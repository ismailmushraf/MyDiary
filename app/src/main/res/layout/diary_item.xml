<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_log_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="#222222"
            android:textSize="18sp"
            tools:text="Today was great" />

        <TextView
            android:id="@+id/text_view_log_description"
            android:layout_below="@id/text_view_log_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#888888"
            android:textSize="14sp"
            tools:text="I should say that today was great because today was
            nothing but great. I'm so happy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_log_description"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_created_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@android:color/holo_blue_dark"
                tools:text="Written on 12/02/2026" />

            <TextView
                android:gravity="end"
                android:id="@+id/text_view_updated_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@android:color/holo_blue_dark"
                tools:text="Updated on 14/02/2026"
                tools:ignore="Suspicious0dp" />
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>